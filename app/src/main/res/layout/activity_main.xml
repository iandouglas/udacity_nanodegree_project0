<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/my_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="normal"
        android:textSize="@dimen/textSize"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/button_project1"
        android:text="@string/media_streamer"
        android:layout_below="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/topButtonMargin"
        android:minWidth="@dimen/buttonWidth"
        android:background="@color/orange"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/button_project2"
        android:text="@string/scores_app"
        android:layout_below="@+id/button_project1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/buttonMargin"
        android:layout_centerHorizontal="true"
        android:minWidth="@dimen/buttonWidth"
        android:background="@color/orange"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/button_project3"
        android:text="@string/library_app"
        android:layout_below="@+id/button_project2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/buttonMargin"
        android:layout_centerHorizontal="true"
        android:minWidth="@dimen/buttonWidth"
        android:background="@color/orange"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/button_project4"
        android:text="@string/build_it_bigger"
        android:layout_below="@+id/button_project3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/buttonMargin"
        android:layout_centerHorizontal="true"
        android:minWidth="@dimen/buttonWidth"
        android:background="@color/orange"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/button_project5"
        android:text="@string/bacon_reader"
        android:layout_below="@+id/button_project4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/buttonMargin"
        android:layout_centerHorizontal="true"
        android:minWidth="@dimen/buttonWidth"
        android:background="@color/orange"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/button_project6"
        android:text="@string/capstone"
        android:layout_below="@+id/button_project5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/buttonMargin"
        android:layout_centerHorizontal="true"
        android:minWidth="@dimen/buttonWidth"
        android:background="@color/capstone_pink"
        android:textColor="@color/white"
        />

</RelativeLayout>
